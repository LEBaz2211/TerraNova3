<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TerraNova3.Game"
             Title="Game">

        <Grid RowDefinitions="30,.95*">

        <HorizontalStackLayout x:Name="Nav"
                               Grid.Row="0">
            <Button
                    Text="Back"
                    Clicked="OnBackClicked"/>
            <Button
                    Text="Play"
                    Clicked="OnRun"/>
            <Button
                    Text="Pause"
                    Clicked="OnPause"/>
            <Button
                    Text="Step"
                    Clicked="OnStep"/>
            <Button
                    Text="ZoomIn"
                    Clicked="OnZoomIn"/>
            <Button
                    Text="ZoomOut"
                    Clicked="OnZoomOut"/>


        </HorizontalStackLayout>

        <ScrollView x:Name="Scroll"
                    Orientation="Both"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    Grid.Row="1">
            <Grid x:Name="Layout"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">


            </Grid>

        </ScrollView>

        </Grid>

</ContentPage>